<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_checked="true">
            <shape android:shape="rectangle">
                <!-- 背景色 -->
                <solid android:color="@color/radio_bg_checked2" />
                <!-- 枠色 -->
                <stroke
                    android:width="1dp"
                    android:color="@color/radio_line2" />
                <!-- 余白 -->
                <padding
                    android:bottom="4dp"
                    android:right="4dp"
                    android:left="4dp"
                    android:top="4dp" />
                <!-- 角まる -->
                <corners
                    android:bottomRightRadius="8dp"
                    android:topRightRadius="8dp"
                    android:bottomLeftRadius="8dp"
                    android:topLeftRadius="8dp"/>
                <!-- グラデーション -->
                <!--
                <gradient
                    android:angle="90"
                    android:endColor="#ffffff"
                    android:startColor="#bbbbbb" />
                  -->
            </shape>
        </item>

        <item android:state_checked="false">
            <shape android:shape="rectangle">
                <!-- 背景色 -->
                <solid android:color="@color/radio_bg_uncheck2" />
                <!-- 枠色 -->
                <stroke
                    android:width="1dp"
                    android:color="@color/radio_line2" />
                <!-- 余白 -->
                <padding
                    android:bottom="4dp"
                    android:right="4dp"
                    android:left="4dp"
                    android:top="4dp" />
                <!-- 角まる -->
                <corners
                    android:bottomRightRadius="8dp"
                    android:topRightRadius="8dp"
                    android:bottomLeftRadius="8dp"
                    android:topLeftRadius="8dp"/>
                <!-- グラデーション -->
                <!--
                <gradient
                    android:angle="90"
                    android:endColor="#ffffff"
                    android:startColor="#bbbbbb" />
                  -->
            </shape>
        </item>
</selector>