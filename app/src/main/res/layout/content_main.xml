<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/title_text"
        android:text=""
        android:textColor="@color/normal_text"
        android:textSize="@dimen/normal_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:text="現在地"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/normal_textSize"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="何する？"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/normal_textSize" />


        <RadioGroup
            android:id="@+id/radio_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--
            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group1"
                android:button="@null"
                android:gravity="center"
                android:text="EAT"
                android:textColor="@drawable/radio_text_color1"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group1"
                android:button="@null"
                android:gravity="center"
                android:text="ACTIVITY"
                android:textColor="@drawable/radio_text_color1"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group1"
                android:button="@null"
                android:gravity="center"
                android:text="SPOT"
                android:textColor="@drawable/radio_text_color1"
                android:textSize="24sp" />
               -->
            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group1"
                android:button="@null"
                android:drawableBottom="@drawable/icon_eat"
                android:gravity="center"
                android:text="食べる"
                android:textColor="@drawable/radio_text_color1"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/radio_group1"
                android:button="@null"
                android:drawableBottom="@drawable/icon_activity"
                android:gravity="center"
                android:text="遊ぶ"
                android:textColor="@drawable/radio_text_color1"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group1"
                android:button="@null"
                android:drawableBottom="@drawable/icon_spot"
                android:gravity="center"
                android:text="訪れる"
                android:textColor="@drawable/radio_text_color1"
                android:textSize="22sp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="徒歩でいくなら？"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/normal_textSize" />

        <RadioGroup
            android:id="@+id/radio_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group2"
                android:button="@null"
                android:gravity="center"
                android:text="すぐそこ"
                android:textColor="@drawable/radio_text_color2"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group2"
                android:button="@null"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="ほどほど"
                android:textColor="@drawable/radio_text_color2"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="@dimen/radio_width"
                android:layout_height="@dimen/radio_height"
                android:layout_weight="1"
                android:background="@drawable/radio_group2"
                android:button="@null"
                android:gravity="center"
                android:text="歩きたい"
                android:textColor="@drawable/radio_text_color2"
                android:textSize="22sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
            android:id="@+id/button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_go"
            android:text="Go!"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:onClick="onButtonClick"/>

</android.support.constraint.ConstraintLayout>